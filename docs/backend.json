{
  "entities": {
    "user": {
      "title": "User",
      "description": "A user of the application",
      "type": "object",
      "properties": {
        "uid": {
          "type": "string",
          "description": "The user's unique ID"
        },
        "email": {
          "type": "string",
          "format": "email",
          "description": "The user's email address"
        },
        "displayName": {
          "type": "string",
          "description": "The user's display name"
        }
      },
      "required": ["uid", "email"]
    },
    "file": {
      "title": "File",
      "description": "Represents a file managed by the application.",
      "type": "object",
      "properties": {
        "id": {
          "type": "string",
          "description": "The unique identifier for the file."
        },
        "name": {
          "type": "string",
          "description": "The name of the file."
        },
        "type": {
          "type": "string",
          "description": "The category of the file (e.g., image, document)."
        },
        "size": {
          "type": "number",
          "description": "The size of the file in bytes."
        },
        "uploadedAt": {
          "type": "string",
          "format": "date-time",
          "description": "The ISO 8601 date-time when the file was uploaded."
        },
        "storagePath": {
          "type": "string",
          "description": "The path to the file in Firebase Storage."
        }
      },
      "required": ["id", "name", "type", "size", "uploadedAt", "storagePath"]
    }
  },
  "auth": {
    "providers": ["anonymous"]
  },
  "firestore": {
    "/users/{userId}": {
      "schema": {
        "$ref": "#/backend/entities/user"
      },
      "description": "User profile information"
    },
    "/files/{fileId}": {
      "schema": {
        "$ref": "#/backend/entities/file"
      },
      "description": "Metadata for uploaded files."
    }
  }
}
