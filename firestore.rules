
rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    // By default, deny all reads and writes
    match /{document=**} {
      allow read, write: if false;
    }

    // Allow users to manage their own profile information
    match /users/{userId} {
      allow read, write: if request.auth.uid == userId;
    }

    // Rules for the 'files' collection
    match /files/{fileId} {
      // Any authenticated user can see that files exist
      allow list, get: if request.auth != null;
      // Allow create for any authenticated user, as long as they set the correct userId
      allow create: if request.auth.uid == request.resource.data.userId;
      // Allow read, update, and delete only for the user who owns the file
      allow read, update, delete: if request.auth.uid == resource.data.userId;
    }
  }
}
