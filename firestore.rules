
rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    // By default, deny all reads and writes
    match /{document=**} {
      allow read, write: if false;
    }

    // Allow users to manage their own profile information
    match /users/{userId} {
      allow read, write: if request.auth.uid == userId;
    }

    // Rules for the 'files' collection
    match /files/{fileId} {
      // Any authenticated user can read the list of files
      allow list: if request.auth != null;
      // Allow read, create, and delete only for the user who owns the file
      allow read, create, delete: if request.auth.uid == request.resource.data.userId;
    }
  }
}
